{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "neon_genie.generate_input.v0",
  "title": "Neon-Genie Generate Input v0",
  "description": "Input schema for neon_genie.shadow.generate operation",
  "type": "object",
  "additionalProperties": false,
  "required": ["prompt"],
  "properties": {
    "prompt": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2048,
      "description": "Text prompt for generation"
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "style": {
          "type": "string",
          "enum": ["formal", "casual", "technical", "creative"],
          "description": "Optional style guidance"
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4096,
          "description": "Maximum tokens to generate"
        },
        "temperature": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 2.0,
          "description": "Sampling temperature (0.0 = deterministic)"
        },
        "domain_tags": {
          "type": "array",
          "minItems": 1,
          "maxItems": 8,
          "items": {
            "type": "string",
            "minLength": 2,
            "maxLength": 24
          },
          "description": "Optional domain tags for context"
        }
      },
      "description": "Optional context and parameters for generation"
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "forbidden_terms": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "description": "Terms to avoid in generation"
        },
        "required_terms": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "description": "Terms that must appear in output"
        }
      },
      "description": "Optional constraints on generation"
    }
  }
}
